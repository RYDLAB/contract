<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_contract_version_publish_wizard_form" model="ir.ui.view">
        <field name="name">contract.version.publish.form</field>
        <field name="model">contract.version.publish.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="contract_id" invisible="1"/>

                        <label for="version_selection" string="Choose a version to publish:"/>
                        <field name="version_selection" widget="radio"/>
                    <group attrs="{'invisible': [('version_selection', '!=', 'draft')]}" string="Draft Versions">
                        <field name="draft_version_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group attrs="{'invisible': [('version_selection', '!=', 'published')]}" string="Published Versions">
                        <field name="published_version_ids" widget="many2many_tags" readonly="1" options="{'no_create': True}"/>
                    </group>
                    <field name="version_to_publish_id" domain="[('id', 'in', version_selection == 'draft' and draft_version_ids or published_version_ids)]" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button string="Sign" type="object" name="action_publish" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
