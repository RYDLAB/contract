<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_contract_version_publish_wizard_form" model="ir.ui.view">
        <field name="name">contract.version.publish.form</field>
        <field name="model">contract.version.publish.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="contract_id" invisible="1"/>
                    <field name="draft_version_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <field name="version_to_publish_id" domain="[('id', 'in', draft_version_ids)]" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button string="Publish" type="object" name="action_publish" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>