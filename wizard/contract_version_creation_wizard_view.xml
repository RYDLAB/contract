<odoo>
    <data>
        <record id="view_contract_version_creation_wizard_form" model="ir.ui.view">
            <field name="name">contract.version.creation.wizard.form</field>
            <field name="model">contract.version.creation.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="contract_id" invisible="1"/>
                            <field name="base_version_id"/>
                        </group>
                        <footer>
                            <button string="Create New Version" type="object" name="button_create_new_version" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>