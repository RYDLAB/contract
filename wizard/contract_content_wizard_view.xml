<odoo>
    <data>
        <record id="view_contract_content_wizard_form" model="ir.ui.view">
            <field name="name">contract.content.wizard.form</field>
            <field name="model">contract.content.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="content"/>
                    </group>
                    <footer>
                        <button string="Save" type="object" class="btn-primary" name="button_save"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>