<odoo>
    <data>
        <record id="view_contract_line_wizard_form" model="ir.ui.view">
    <field name="name">contract.line.wizard.form</field>
    <field name="model">contract.line.wizard</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="section_id" invisible="1"/>
                    <field name="contract_id" invisible="1"/>
                    <field name="content_text"/>
                    <field name="number"/>
                </group>
                <footer>
                    <button string="Create" type="object" name="button_create" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </sheet>
        </form>
    </field>
</record>

    </data>
</odoo>