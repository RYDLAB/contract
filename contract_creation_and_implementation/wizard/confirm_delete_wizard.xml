<odoo>
    <data>
        <record id="view_confirm_deletion_wizard_form" model="ir.ui.view">
            <field name="name">confirm.deletion.wizard.form</field>
            <field name="model">confirm.deletion.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="confirm_message" nolabel="1"/>
                        <footer>
                            <button string="Confirm" type="object" name="button_confirm_deletion" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>